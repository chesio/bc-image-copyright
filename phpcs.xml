<?xml version="1.0"?>
<ruleset name="BC Image Copyright">
  <description>BC Image Copyright Coding Standards</description>

  <!-- Scan these files -->
  <file>classes</file>
  <file>api.php</file>
  <file>autoload.php</file>
  <file>bc-image-copyright.php</file>
  <file>uninstall.php</file>

  <!-- Use PSR-1 as a base -->
  <rule ref="PSR1">
  </rule>

  <!-- Use PSR-2 as a base -->
  <rule ref="PSR2">
    <!-- Disable PSR-2 line length warnings -->
    <exclude name="Generic.Files.LineLength"/>
  </rule>

</ruleset>